{
  "extends": "./tsconfig.base.json",
  "include": ["packages/**/*.ts"],
  "exclude": [
    "**/lib/**",
    "**/jest-snapshot-serializer/**",
    "**/__tests__/*",
    "**/__mocks__/*"
  ],
  "typedocOptions": {
    "name": "Machinat",
    "excludePrivate": true,
    "excludeInternal": true,
    "categorizeByGroup": false,
    "categoryOrder": [
      "Root",
      "Component",
      "Provider",
      "Interface",
      "Container",
      "Props"
    ]
  }
}
